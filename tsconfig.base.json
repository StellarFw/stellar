{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "sourceMap": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "allowJs": false,
    "lib": ["es7"],
  },
  "include": ["packages/*/src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
