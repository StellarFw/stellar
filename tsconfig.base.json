{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "target": "ESNext",
    "allowJs": false,
    "resolveJsonModule": true,
    "lib": ["ESNext"],
    "types": ["jest", "node"],
    "paths": {
      "@stellarfw/*": ["packages/*/src"],
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
