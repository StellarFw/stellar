{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "paths": {
      "@stellar-fw/cli": ["./packages/cli/*"]
    },
    "types": ["node"]
  },
  "exclude": ["./example/**/*"]
}
