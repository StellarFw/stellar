{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext"],
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"strict": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"rootDir": ".",
		"outDir": "lib",
		"declaration": true,
		// "paths": {
		// 	"@stellar/*": ["./src/*"]
		// },
		"types": ["node"]
	},
	"exclude": ["./example/**/*"],
	"include": ["./src", "./cli", "./tests"]
}
