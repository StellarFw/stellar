{
  "typescript.preferences.quoteStyle": "double",
  "search.exclude": {
    "**/node_modules/**": true,
    "**/bower_components": true,
    "**/lib": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "example/**/*.js.map": true,
    "example/**/*.d.ts": true,
    "packages/**/*.js.map": true,
    "packages/**/*.d.ts": true
  },

  "editor.codeActionsOnSaveTimeout": 2000,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  }
}
