{
  // Format
  "editor.formatOnSave": true,

  /// Disable format on save for JS and TS since it will be done by ESLint
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },

  // TypeScript
  "typescript.preferences.quoteStyle": "double",

  // File types
  "files.associations": {
    ".env*": "properties"
  },

  // Search
  "search.exclude": {
    "**/node_modules/**": true,
    "**/bower_components": true,
    "**/lib": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "example/**/*.js.map": true,
    "example/**/*.d.ts": true,
    "packages/**/*.js.map": true,
    "packages/**/*.d.ts": true
  }
}
